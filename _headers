# All assets should be cached for 1 year
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Images cache
/images/*
  Cache-Control: public, max-age=31536000, immutable

/Salvium_assets/*
  Cache-Control: public, max-age=31536000, immutable

# CSS and JavaScript files
/css/*
  Cache-Control: public, max-age=31536000, immutable

/js/*
  Cache-Control: public, max-age=31536000, immutable

# HTML files - cache for a shorter time
/*
  Cache-Control: public, max-age=0, must-revalidate
